<title>{% block title %}Welcome!{% endblock %}</title>
{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('dependencies/bootstrap/dist/css/bootstrap.min.css') }}">
    <link rel="stylesheet" href="{{ asset('dependencies/bootstrap/dist/css/bootstrap-theme.min.css') }}">
    <style>
        #page {
            padding-top: 40px;
        }

        body {
            background-color: hwb(18, 92%, 0%, 0.54);
        }

        footer {
            position: fixed;
            bottom: 0;
            left: 0;
            background-color: hsl(0, 0%, 6%);
            color: #d5a200;
            width: 100%;
        }
    </style>
{% endblock %}
<link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
</head>
<body class="container-fluid">
{% block nav %}
    {% include 'partials/_nav.html.twig' %}
{% endblock %}
<div class="row" id="page">
    <div class="col-md-10 col-md-offset-3">
        <header>
            {% block header %}{% endblock %}
        </header>
        <section class="col-md-10">
            {% for label, flashes in app.session.flashbag.all %}
                {% for flash in flashes %}
                    <div class="alert alert-{{ label }}">
                        {{ flash }}
                    </div>
                {% endfor %}
            {% endfor %}

            {% block body %}
            <ul>
                <h1> Information sur le paiement réalisé</h1>

            </ul>
            {% endblock %}
        </section>

        <aside class="col-md-10">
            {% block aside %}
            gkhjghkjgl

            {% endblock %}
        </aside>
    </div>
</div>

<footer>
    {% block footer %}
        copyleft : Dido Mulolo Mitungi
    {% endblock %}
</footer>

{% block javascripts %}
    <script src="{{ asset('dependencies/jquery/dist/jquery.min.js') }}"></script>
    <script src="{{ asset('dependencies/bootstrap/dist/js/bootstrap.min.js') }}"></script>
{% endblock %}
</body>
</html>
